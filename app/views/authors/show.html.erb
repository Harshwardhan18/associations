<h1><%=@author.name %></h1>
<hr>
<br>
<%= link_to 'Delete', author_path(@author), method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-danger' %>
<hr>
    <h2>Books</h2>
    <% @author.books.each do |book|%>
        <div class="well">
            <p><strong><%= book.title %></strong> : <%= book.content %></p>
        </div>
    <%end%>
<hr>
<h4>Add Book</h4>
<%= form_for([@author, @author.books.build]) do |f| %>
<p>
    <%= f.label :title%>
    <br>
    <%= f.text_field(:title, {:class => 'form-control'})%>
</p>
<p>
    <%= f.label :content%>
    <br>
    <%= f.text_area(:content, {:class => 'form-control'})%>
</p>
<p>
    <%= f.submit({:class => 'btn btn-dark'}) %>
</p>
<% end %>