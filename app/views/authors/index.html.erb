<h1>Authors</h1>
<table class='table'>
  <thead>
    <tr>
      <th>Author Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= link_to 'Show', author_path(author) %></td>
        <td><%= link_to 'Delete', author_path(author), method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create Author', new_author_path %>

